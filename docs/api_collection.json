{
    "info": {
        "name": "Expense Tracker API",
        "description": "Personal Expense Tracker REST API - Complete Collection",
        "version": "1.0.0"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8080"
        },
        {
            "key": "token",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/auth/register",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"john_doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"secure123\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}"
                        }
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/auth/login",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"demo\",\n  \"password\": \"demo123\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Expenses",
            "item": [
                {
                    "name": "Create Expense",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/expenses",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"amount\": 45.99,\n  \"category\": \"FOOD\",\n  \"description\": \"Dinner at restaurant\",\n  \"expenseDate\": \"2024-01-15\",\n  \"merchantName\": \"Pizza Palace\",\n  \"paymentMethod\": \"Credit Card\",\n  \"isRecurring\": false\n}"
                        }
                    }
                },
                {
                    "name": "Get All Expenses",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/expenses",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Get Expense by ID",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/expenses/1",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Update Expense",
                    "request": {
                        "method": "PUT",
                        "url": "{{base_url}}/api/expenses/1",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"amount\": 55.99,\n  \"category\": \"FOOD\",\n  \"description\": \"Updated dinner expense\",\n  \"expenseDate\": \"2024-01-15\"\n}"
                        }
                    }
                },
                {
                    "name": "Delete Expense",
                    "request": {
                        "method": "DELETE",
                        "url": "{{base_url}}/api/expenses/1",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Get Expenses by Month",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/expenses/month?year=2024&month=1",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Get Expenses by Category",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/expenses/category/FOOD",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Get Expenses by Date Range",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/expenses/range?startDate=2024-01-01&endDate=2024-01-31",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "Analytics",
            "item": [
                {
                    "name": "Get Spending Summary",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/expenses/summary",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Get Categories",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/expenses/categories",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Export to CSV",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/expenses/export/csv",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Get Python Analytics",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/expenses/analytics/python",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Get C++ Calculations",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/expenses/analytics/cpp",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}